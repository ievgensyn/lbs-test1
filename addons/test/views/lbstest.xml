<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="test_form_view">
            <field name="name">test.form</field>
            <field name="model">lbs.test</field>
            <field name="arch" type="xml">
                <form string="Test Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tester"/>
                        </group>
                        <notebook>
                            <page string="Purpose">
                                <field name="purpose"/>
                            </page>
                            <page string="About">
                                This is an example of notebooks
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="test_search_view">
            <field name="name">test.search</field>
            <field name="model">lbs.test</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or set of views
         -->
         <record model="ir.actions.act_window" id="test_list_action">
            <field name="name">Tests</field>
            <field name="res_model">lbs.test</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first test
                </p>
            </field>
        </record>


        <!-- top level menu: no parent -->
        <menuitem id="main_lbstest_menu" name="Test"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="lbstest_menu" name="Test" parent="main_lbstest_menu"/>
        <!-- the following menuitem should appear "after"
             its parent lbstest_menu and "after" its
             action test_list_action -->
        <menuitem id="tests_menu" name="Tests" parent="lbstest_menu" action="test_list_action"/>
        <!-- Full id location:
             action="lbs.test_list_action"
             It is not required when it is the same module -->

        <!-- session form view -->
        <record model="ir.ui.view" id="session_form_view">
            <field name="name">session.form</field>
            <field name="model">lbs.session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <sheet>
                        <group>
                            <field name="test"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- test session tree/list view -->
        <record model="ir.ui.view" id="session_tree_view">
            <field name="name">session.tree</field>
            <field name="model">lbs.session</field>
            <field name="arch" type="xml">
                <tree string="Session Tree" decorator-info="duration&lt;5" decoration-danger="duration&lt;15">
                    <field name="test"/>
                    <field name="duration" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- calendar view -->
        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">session.calendar</field>
            <field name="model">lbs.session</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar" date_start="start_date" date_stop="end_date" color="test" mode="month">
                    <field name="test"/>
                </calendar>
            </field>
        </record>

        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Test Session</field>
            <field name="res_model">lbs.session</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
        </record>

        <!-- add to menuitem "after" ist parent 'lbstest_menu' -->
        <menuitem id="session_menu" name="Test session" parent="lbstest_menu" action="session_list_action"/>
    </data>
</odoo>